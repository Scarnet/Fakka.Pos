<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="SplashTheme" parent="android:Theme">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:statusBarColor">@color/color_primary</item>
  </style>

  <style name="MainTheme" parent="MainTheme.Base">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/color_primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/color_primary</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/color_accent</item>
    <!--transparent color -->
    <!--<item name="colorAccent">#00000000</item>-->
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:colorActivatedHighlight">@android:color/transparent</item>
    <!--<item name="android:colorActivatedHighlight">@color/color_accent</item>-->

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>

    <item name="tabIndicatorColor">@color/color_accent</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabSelectedTextColor">@color/color_accent</item>
    <item name="android:textSize">10sp</item>

  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/color_accent</item>
    <item name="android:textSize">14sp</item>
  </style>


  <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:textSize">14sp</item>
    <item name="colorAccent">@color/color_accent</item>
    <item name="android:background">#ffffff</item>

  </style>

</resources>
